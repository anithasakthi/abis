        <condition/>
        <description>To validate 10 digit phone number</description>
        <field>u_phone_number</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>PhoneNumberValidation</name>
        <order/>
        <script><![CDATA[function onSubmit() {
   //Type appropriate comment here, and begin script below
   
	var phoneNr = g_form.getValue('u_phone_number');
    var reg = /^[0]\d{10}/;
    if (!reg.test(phoneNr)) {
       // g_form.setValue('u_phone_number', '');
        g_form.addErrorMessage("Phone number is invallid");
        g_form.showFieldMsg('u_phone_number', 'Phone number should start with 0 and be 11 digits', "error");
        return false;
    }
}]]></script>
